<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:text="QUẢN LÝ NHÂN VIÊN"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="35dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã NV:"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/etMaNV"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên NV:"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/etTenNV"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rgType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại NV:"
            android:textSize="25dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbChinhThuc"
                android:text="Chính Thức"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbThoiVu"
                android:text="Thời Vụ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    </LinearLayout>
    <Button
        android:id="@+id/btinput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Nhập NV"
        android:layout_marginLeft="110dp"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/tvSelection"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBlue"
        android:textSize="20dp"
        android:text="position:; value:"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_person"
        android:textSize="25dp"/>
</LinearLayout>